
@{
    ViewBag.Title = "Manage Partner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div data-ng-app="ManagePartner">
    <div data-ng-controller="ManagePartnerController as $ctrl">
        <div class="container-fluid">
            <h2>@ViewBag.Title</h2>
            <hr />
            <div class="data-container">
                <div class="row">
                    <div class="col-sm-12">
                        <div data-ng-if="filterData.length > $ctrl.data.page.itemPerPage" style="text-align: right;">
                            <div uib-pagination class="pagination-sm pagination" total-items="filterData.length"
                                 ng-model="$ctrl.data.page.currentPage" ng-change="$ctrl.pageChanged()" previous-text="&lsaquo;"
                                 next-text="&rsaquo;" items-per-page="$ctrl.data.page.itemPerPage" max-size="$ctrl.data.page.maxPage"
                                 boundary-link-numbers="true">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-condensed table-hover">
                        <thead style="background-color:#E9E9E9;">
                            <tr>
                                <th>
                                    <a ng-href="" data-ng-click="$ctrl.OnChangeSorting('name')">Name&nbsp;</a><i data-ng-class="$ctrl.ColumnSortClass('name')">
                                    </i><br />
                                    <input data-ng-model="$ctrl.data.search.name" placeholder="Search by Name ..."
                                           style="width: 100%; height: 25px; margin-top: 4px;" />
                                </th>
                                <th>
                                    <a ng-href="" data-ng-click="$ctrl.OnChangeSorting('shortDescription')">Short Description&nbsp;</a><i data-ng-class="$ctrl.ColumnSortClass('shortDescription')">
                                    </i><br />
                                    <input data-ng-model="$ctrl.data.search.shortDescription" placeholder="..."
                                           style="width: 100%; height: 25px; margin-top: 4px;" />
                                </th>
                                <th>
                                    <a ng-href="" data-ng-click="$ctrl.OnChangeSorting('description')">Description&nbsp;</a><i data-ng-class="$ctrl.ColumnSortClass('description')">
                                    </i><br />
                                    <input data-ng-model="$ctrl.data.search.description" placeholder="..."
                                           style="width: 100%; height: 25px; margin-top: 4px;" />
                                </th>
                                <th>
                                    <a ng-href="" data-ng-click="$ctrl.OnChangeSorting('isActive')">Is Active&nbsp;</a><i data-ng-class="$ctrl.ColumnSortClass('isActive')">
                                    </i>
                                </th>
                                <th>
                                    <a ng-href="" data-ng-click="$ctrl.OnChangeSorting('url')">Is Active&nbsp;</a><i data-ng-class="$ctrl.ColumnSortClass('url')">
                                    </i>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="d in filterData = ($ctrl.data.partners | filter:$ctrl.data.search | orderBy : $ctrl.ColumnSortOrder()) | limitTo : $ctrl.data.page.itemPerPage : $ctrl.data.page.itemPerPage * ($ctrl.data.page.currentPage - 1)">
                                <td>{{d.name}}</td>
                                <td>{{d.shortDescription}}</td>
                                <td>{{d.description}}</td>
                                <td>{{d.isActive}}</td>
                                <td>{{d.url}}</td>
                                <td><a ng-href="" class="data-link" data-ng-click="$ctrl.OnEditItem(d)"><i class="fa fa-pencil-square-o"></i></a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>