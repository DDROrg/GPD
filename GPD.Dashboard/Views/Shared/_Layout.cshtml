<!DOCTYPE html>
<html>
<head>
    @{
        var up = SessionManager.GetInstance().GetUserProfile();
        var isAdmin = SessionManager.GetInstance().HasRolesForPartner("ADMINISTRATOR", "ALL");
    }
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        var __RootUrl = '@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))';
        var __UserEmail = '@(up == null ? "": up.Email)';
    </script>
</head>
<body data-ng-app="GPD">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GPD Analytics", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown" data-ng-controller="PartnerCtrl as $ctrl" ng-cloak>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Partner: {{$ctrl.data.LogedinUserProfile.selectedPartner}}
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li data-ng-repeat="d in $ctrl.data.LogedinUserProfile.partnerNames"><a data-ng-href="" data-ng-click="$ctrl.SelectPartner(d)">{{d}}</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Report
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a ui-sref="GPD.dashboard" ui-sref-active="active">Dashboard</a></li>
                            <li><a ui-sref="GPD.TopCategories" ui-sref-active="active">Top Categories</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GPD Analytics</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/custom/script")
    @RenderSection("scripts", required: false)
</body>
</html>
